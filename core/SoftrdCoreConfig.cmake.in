@PACKAGE_INIT@

include_directories(${CMAKE_CURRENT_LIST_DIR}/include)

set_and_check(VCPKG_INCLUDE "@PACKAGE_VCPKG_INCLUDE_DIR@")
include_directories(${VCPKG_INCLUDE})

add_library(SoftrdAPI SHARED IMPORTED)
if(WIN32)
  set_property(TARGET SoftrdAPI PROPERTY IMPORTED_IMPLIB ${CMAKE_CURRENT_LIST_DIR}/lib/SoftrdAPI.lib)
  set_property(TARGET SoftrdAPI PROPERTY IMPORTED_LOCATION ${CMAKE_CURRENT_LIST_DIR}/lib/SoftrdAPI.dll)
  file(COPY ${CMAKE_CURRENT_LIST_DIR}/lib/SoftrdAPI.dll DESTINATION ${CMAKE_BINARY_DIR}/Release/)
elseif(APPLE)
  set_property(TARGET SoftrdAPI PROPERTY IMPORTED_LOCATION ${CMAKE_CURRENT_LIST_DIR}/lib/libSoftrdAPI.dylib)
elseif(LINUX)
  set_property(TARGET SoftrdAPI PROPERTY IMPORTED_LOCATION ${CMAKE_CURRENT_LIST_DIR}/lib/libSoftrdAPI.so)
endif()